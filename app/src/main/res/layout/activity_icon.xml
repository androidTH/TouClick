<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp">
        <com.touclick.android.ImgTxtRelativeLayout
            android:id="@+id/imgtxtrelativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            img:checkwidth="280dp"
            img:checkheight="50dp"
            img:checktxt="@string/click_check"
            img:checkoktxt="@string/check_success"
            img:checkerrortxt="@string/check_fail"
            img:checkbg="@drawable/btn_click_normal"
            img:checkokbg="@drawable/btn_click_normal"
            img:checktype="14"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/logo_w"/>
        </RelativeLayout>
    <TextView
        android:id="@+id/tvresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>