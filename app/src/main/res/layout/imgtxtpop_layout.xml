<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:padding="15dp"
    android:background="@color/color_white">

    <com.touclick.android.ImgTxtLayout
        android:id="@+id/eightimagelayout"
        android:layout_width="254dp"
        android:layout_height="152dp"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:indeterminateDrawable="@drawable/imofan_round_progress_bar_1" />

    <RelativeLayout
        android:layout_below="@+id/eightimagelayout"
        android:id="@+id/relativelayoutmodel"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center"
         android:textSize="16sp"
         android:text="依次点击上图中的:"/>
        <ImageView
            android:id="@+id/imagetemplateleft"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imagetemplateright"
            android:layout_toStartOf="@+id/imagetemplateright" />
        <ImageView
            android:id="@+id/imagetemplateright"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relativelayoutmodel"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageclose"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/close_check_selecter" />

        <Button
            android:id="@+id/btnsend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/btn_check_selecter" />

        <ImageView
            android:id="@+id/imagefresh"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/refresh_check_selecter" />
    </LinearLayout>

</RelativeLayout>